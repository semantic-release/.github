{
  "extends": [
    "config:best-practices"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies",
        "action"
      ],
      "automerge": true
    },
    {
      "description": "v prefix workaround for action updates",
      "matchDepTypes": [
        "action"
      ],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "semanticCommitType": "ci",
      "semanticCommitScope": "action"
    },
    {
      "description": "Dropped CJS support: https://github.com/xojs/xo/releases/tag/v0.40.0",
      "matchPackageNames": [
        "xo"
      ],
      "allowedVersions": "<0.40.0"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update semantic-release version used by npx",
      "fileMatch": [
        "^\\.github/workflows/release-package\\.yml$"
      ],
      "matchStrings": [
        "\\srun: npx semantic-release@(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "semantic-release"
    }
  ]
}
